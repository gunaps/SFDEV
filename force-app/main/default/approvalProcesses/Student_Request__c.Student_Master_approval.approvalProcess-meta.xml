            <criteriaItems>
                <field>Student_Master__c.Age__c</field>
                <operation>lessThan</operation>
                <value>18</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Student Age below 18</label>
        <name>Student_Age_below_18</name>
