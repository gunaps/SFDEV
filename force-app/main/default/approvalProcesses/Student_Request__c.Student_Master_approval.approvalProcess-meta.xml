    <emailTemplate>unfiled$public/Student_Details</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Student_Request__c.Number__c</field>
